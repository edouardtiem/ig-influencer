{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "framework": "nextjs",
  "regions": ["cdg1"],
  "functions": {
    "src/app/api/auto-post/route.ts": {
      "maxDuration": 120
    },
    "src/app/api/generate-contextual/route.ts": {
      "maxDuration": 120
    },
    "src/app/api/daily-trends/route.ts": {
      "maxDuration": 30
    }
  },
  "crons": [
    {
      "path": "/api/auto-post",
      "schedule": "30 5 * * *"
    },
    {
      "path": "/api/auto-post?slot=midday",
      "schedule": "30 10 * * *"
    },
    {
      "path": "/api/auto-post?slot=evening",
      "schedule": "0 17 * * *"
    }
  ]
}

